  <p>What is the longest word you can find?</p>
  <input type="text" name="word" placeholder="ex: Kitchen">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
